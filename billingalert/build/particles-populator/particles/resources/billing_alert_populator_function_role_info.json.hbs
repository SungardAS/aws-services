{{#resource}}
  "Type": "AWS::IAM::Role",
  "Properties": {
    "AssumeRolePolicyDocument": {
      "Version": "2012-10-17",
      "Statement": [ {
        "Sid": "",
        "Effect": "Allow",
        "Principal": {
          "Service": "lambda.amazonaws.com"
        },
        "Action": "sts:AssumeRole"
      } ]
    },
    "Path": "/",
    "Policies": [ {
      "PolicyName": "InlinePolicy",
      "PolicyDocument": {
        "Version": "2012-10-17",
        "Statement": [ {
         "Effect": "Allow",
         "Action": [
           "logs:CreateLogGroup",
           "logs:CreateLogStream",
           "logs:PutLogEvents"
         ],
         "Resource": "arn:aws:logs:*:*:*"
        },
        {
         "Effect": "Allow",
         "Action": [
           "cloudwatch:*"
         ],
         "Resource": "*"
        },
        {
         "Effect": "Allow",
         "Action": "sns:Publish",
         "Resource": "arn:aws:sns:*"
        } ]
      }
    } ]
  }
{{/resource}}
